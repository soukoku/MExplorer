<Window x:Class="MExplorer.Views.ShellWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:MExplorer.Views"
        xmlns:vm="clr-namespace:MExplorer.ViewModels"
        x:Name="theWindow"
        DataContext="{StaticResource Shell}"
        Icon="{Binding SelectedProvider.SelectedContainer.MediumIcon}"
        Title="{Binding SelectedProvider.SelectedContainer, Converter={StaticResource AppTitleConv}}" 
        Height="640" Width="960">
    <Window.Resources>
        <!--<DataTemplate DataType="{x:Type vm:ProviderVM}">
            <views:ProviderView />
        </DataTemplate>-->
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <TabControl x:Name="theTabs" Grid.Row="1"
                    SelectionChanged="theTabs_SelectionChanged">
            <!--<TabControl.ItemTemplate>
                <DataTemplate>
                    <ContentPresenter Content="{Binding Name}"></ContentPresenter>
                </DataTemplate>
            </TabControl.ItemTemplate>-->
        </TabControl>
    </Grid>
</Window>
